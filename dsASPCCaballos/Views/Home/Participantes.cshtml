@{
    ViewData["Title"] = "About";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<p>Use this area to provide additional information.</p>
<div ng-controller="consulta">
    <div class="dx-viewport demo-container">

        <div id="gridContainer" dx-data-grid="dataGridOptions" dx-item-alias="participante" style="width:100% !important;">
            <div data-options="dxTemplate:{ name:'editTemplate' }">

                @*<input type="submit" ng-click="modificarVidrio(vidrio)" />*@
                <button type="submit" ng-click="modificarParticipante(participante.data)" class="btn btn-default btn-sm"><i class="fas fa-pen-square"></i> Editar</button>

            </div>
            <div data-options="dxTemplate:{ name:'deleteTemplate' }">

                @*<input type="submit" ng-click="modificarVidrio(vidrio)" />*@
                <button type="submit" ng-click="eliminarParticipante(participante.data)" class="btn btn-default btn-sm"><i class="fas fa-trash-alt"></i> Eliminar</button>

            </div>

        </div>
    </div>


    <div dx-popup="popupOptions">
        <div class='popup-property-details'>
            <div class="form">
                <div class="form-group">
                    <label>Nombre </label>
                    <div class="col-12">
                        <input type="text" ng-model="currentParticipante.nombre" class="form-control" />
                        <small id="" class="form-text text-muted">Nombre del participante</small>
                    </div>
                </div>
                <div class="form-group">
                    <label>Presente </label>
                    <div class="col-12">
                        <input type="checkbox" ng-model="currentParticipante.presente" class="form-control" />
                        <small id="" class="form-text text-muted">El participante ha llegado ya al lugar del evento.</small>
                    </div>
                </div>
                <div class="row">
                    <div class="col text-right">
                        @*<input type="submit" value="Guardar cambios" ng-click="guardarCambiosPopup()" />*@
                        <button class="btn btn-primary" type="submit" value="Guardar cambios" ng-click="guardarCambiosPopup()">Guardar</button>
                        <button class="btn btn-danger" type="submit" value="Guardar cambios" ng-click="cancelarCambios()">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>